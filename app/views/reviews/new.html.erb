<div class="container mt-5">
<h1>Add a new review for this restaurant</h1>


<%= simple_form_for [@restaurant, @review] do |f| %>
  <div>
  <%= f.input :content %>
  <%= f.input :rating %>
  </div>
  <div>
  <%= f.submit class:"btn btn-success" %>
  </div>
<% end %>

  <div class="my-3">
    <%= link_to restaurant_path(@restaurant) do  %>
    <div class="btn btn-primary">Back to restaurant</div>
    <% end  %>
  </div>

</div>
